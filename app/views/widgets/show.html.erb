<p id="notice"><%= notice %></p>
<h1>Widget Page</h1>
<% if !session[:user_id] %>
  <p>Please
    <a href='/signup/' style="text-decoration: underline;">
      Create Account</a>
       or
    <a href='/login/'style="text-decoration: underline;">
      Log In</a>
       to place orders.
  </p>
<% end %>
<p>
  <strong>Name:</strong>
  <%= @widget.name %>
</p>
<p>
  <strong>Picture:</strong>
  <%= image_tag(@widget.picture) %>
</p>
<p>
  <strong>Description:</strong>
  <%= @widget.description %>
</p>
<div class="price_line">
  <p>
    <span class="price">
      <strong>Price:</strong>
      <%= number_to_currency(@widget.price) %>
    </span>
  </p>
  <% if session[:user_id] %>
    <p>
      <%= button_to 'Add to Cart', widgets_path %>
    </p>
  <% end %>
</div>

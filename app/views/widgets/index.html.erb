<h1>Widgets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @widgets.each do |widget| %>
      <tr>
        <td><%= widget.name %></td>
        <td><%= image_tag(widget.picture, :size => '75x56') %></td>
        <td><%= widget.description %></td>
        <td><%= widget.price %></td>
        <td>
          <%= label :quantity, "Quantity:" %> &ensp;
          <%= number_field :quantity %>
          <%= button_to 'Add to Cart' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


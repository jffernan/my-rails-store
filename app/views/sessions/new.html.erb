<h1>Log In</h1>
<%= form_tag do %>
  <div class="field">
  <%= label_tag :email, 'User Email:' %>
  <%= text_field_tag :email, params[:email] %>
  </div>

  <div class="field">
  <%= label_tag :password, 'Password:' %>
  <%= password_field_tag :password, params[:password] %>
  </div>

  <div class="field">
  <%= submit_tag "Login" %>
  </div>
<% end %>
